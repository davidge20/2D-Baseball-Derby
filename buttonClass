class Button:
    def __init__(self,x,y, color, attachedFunction = None):
        self.color = color
        self.x0 = x
        self.y0 = y
        self.height = 100
        self.width = 200
        self.x1 = self.x0 + self.width
        self.y1 = self.y0 + self.height
        self.attachedFunction = attachedFunction

    def redraw(self,canvas):
        canvas.create_rectangle(self.x0,self.y0,self.x1,self.y1, fill = "blue")

